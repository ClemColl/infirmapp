<%= form_for(patient) do |f| %>

  <div class="field" style="margin-bottom:10px;">
    <%= f.label :nom %>
    <%= f.text_field :nom, style: 'margin-top:10px;padding:10px 40px;' %>
  </div>

  <div class="field" style="margin-bottom:10px;">
    <%= f.label :prenom, 'Prénom' %>
    <%= f.text_field :prenom, style: 'margin-top:10px;padding:10px 40px;' %>
  </div>

  <div class="field" style="margin-bottom:10px;">
    <%= f.label :adresse %>
    <%= f.text_field :adresse, style: 'margin-top:10px;padding:10px 40px;' %>
  </div>

  <div class="field" style="margin-bottom:10px;">
    <%= f.label :tel, 'Téléphone' %>
    <%= f.text_field :tel, style: 'margin-top:10px;padding:10px 40px;' %>
  </div>


  <div class="field" style="margin-bottom:10px;">
    <%= f.label :ordonnance %>
    <%= f.attachinary_file_field :ordonnance %>
  </div>

  <div class="actions">
    <%= f.submit 'Enregistrer', style: "width:200px;height:40px;margin-top:20px;font-size:20px;" %>
  </div>
<% end %>
