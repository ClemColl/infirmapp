<script>
document.querySelector('textarea').addEventListener('input', function(e){
    e.target.style.height = 'auto';
    var newHeight = (e.target.scrollHeight > 32 ? e.target.scrollHeight : 32);
    e.target.style.height = newHeight.toString() + 'px';
});
</script>
