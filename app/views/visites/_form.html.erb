<script>
$(function () {
  $('#visite_commentaire').autoGrow();
});
</script>
<%= form_for [@patient, @visite], html: {class: "w-full text-center max-w-lg"} do |f| %>

  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
      <%= f.label :date, class:'block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2' %>
      <%= f.text_field :date, value: f.object.new_record? ? Date.today.strftime("%d/%m/%Y") : f.object.date, class: 'appearance-none block text-center w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white' %>
      <%# class border-red-500 %>
      <%# <p class="text-red-500 text-xs italic">Please fill out this field.</p> %>
    </div>
    <div class="w-full md:w-1/2 px-3">
      <%= f.label :stade, class: 'block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2'%>
      <%= f.select :stade, ['-', 'Infection', 'Nécrose', 'Fibrine', 'Bourgeonnement', 'Epidermisation', 'Plaie Cavitaire', 'Post Opératoire'], class: 'block appearance-none w-full bg-white border border-gray-400 hover:border-gray-500 px-4 py-2 pr-8 rounded shadow leading-tight focus:outline-none focus:shadow-outline' %>
    </div>
  </div>
  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full px-3">
      <%= f.label :echelle, 'Echelle douleur EVA' , class: 'block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2' %>
      <%= f.text_field :echelle, class: 'appearance-none text-center block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500' %>
    </div>
  </div>
  <div class="flex flex-wrap -mx-3 mb-2">
      <div class="flex-1 md:w-1/6 px-3 mb-6 md:mb-0">
        <%= f.label :longeur, 'Longueur' class: 'block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2' %>
        <%= f.text_field :longeur, class: 'appearance-none text-center block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500' %>
      </div>
      <div class="flex-1 md:w-1/6 px-3 mb-6 md:mb-0">
        <%= f.label :largeur, class: 'block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2' %>
        <%= f.text_field :largeur, class: 'appearance-none text-center block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500' %>
      </div>
      <div class="flex-1 md:w-1/6 px-3 mb-6 md:mb-0">
      <%= f.label :profondeur, class: 'block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2' %>
      <%= f.text_field :profondeur, class: 'appearance-none text-center block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500' %>
      </div>
  </div>

  <div class="flex flex-wrap -mx-3 mb-2">
    <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
      <%= f.label :commentaire, class: 'block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2' %>
      <%= f.text_area :commentaire, class: 'appearance-none text-center block w-full h-64 bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500', style: 'resize:vertical;' %>
    </div>
    <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
      <%= f.label :images %>
      <%= f.attachinary_file_field :images, multiple: true %>
    </div>
      <%= f.hidden_field :patient_id %>
  </div>

  <div class="flex flex-wrap -mx-3 mb-2">
    <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
      <%= f.submit 'Enregistrer', class: 'bg-gray-200 w-full text-center hover:bg-blue-700 font-bold py-2 px-4 border rounded', style: ' color: #F98127;;border-color: #F98127;' %>
    </div>
  </div>

<% end %>
